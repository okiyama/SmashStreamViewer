{
  "manifest_version": 2,

  "name": "Smash Stream Viewer",
  "description": "For easily viewing the Super Smash Bros. streams on Twitch.tv.",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_popup": "popup.html"
  },
  "icons": {
  "48": "images/icon48.png",
  "128": "images/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "https://api.twitch.tv/"
  ]
}
